{% extends "/layouts/tabbed.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
{% block title %}
    Admin
{% endblock %}
{% block sidebar %}
    <twig:sidebar-item icon="bi-house-door-fill" tab="home" name="Home" selected/>
    <twig:sidebar-item icon="bi-heart-pulse-fill" tab="diagnostics" name="Diagnostics" />
    <twig:sidebar-item icon="bi-compass-fill" tab="activity" name="GPS and Activity" />

    {# Stupid hack: these are here but hidden so we can mimmic sub-tabs #}
    <twig:sidebar-item icon="bi-times" tab="actions" name="Actions" hidden/>
    <twig:sidebar-item icon="bi-times" tab="metrics" name="Metrics" hidden/>
    <twig:sidebar-item icon="bi-times" tab="notifications" name="Notifications" hidden/>
{% endblock %}
{% block panels %}
    <twig:panel id="home" template="/panel/debug/home.html.twig" skeleton selected/>
    <twig:panel id="diagnostics" template="/panel/debug/logs.html.twig" heading="Logs & Diagnostics"/>
    <twig:panel id="activity" template="/panel/debug/activity.html.twig" heading="GPS & Activity"/>
    <twig:panel id="actions" template="/panel/debug/actions.html.twig" heading="Actions" />
    <twig:panel id="metrics" template="/panel/debug/metrics.html.twig" heading="Metrics"/>
    <twig:panel id="notifications" template="/panel/debug/notifications.html.twig" heading="Notifications"/>
{% endblock %}