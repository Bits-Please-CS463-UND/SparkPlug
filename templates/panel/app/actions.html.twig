<div class="p-4 d-block h-auto div-zebra">
    <div class="d-flex" data-toggle-terminology="OFF:ON">
        <div class="form-check form-switch fs-3">
            <input class="form-check-input" type="checkbox" role="switch" id="engine-toggle">
            <label class="form-check-label" for="engine-toggle">Engine</label>
        </div>
        <p class="ms-auto fs-3 pt-0 fw-bold" data-toggle-target></p>
    </div>
    <div class="d-flex" data-toggle-terminology="DISENGAGED:ENGAGED">
        <div class="form-check form-switch fs-3">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Alarm System</label>
        </div>
        <p class="ms-auto fs-3 pt-0 fw-bold" data-toggle-target></p>
    </div>
    <div class="d-flex" data-toggle-terminology="CLOSED:OPEN">
        <div class="form-check form-switch fs-3">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Trunk</label>
        </div>
        <p class="ms-auto fs-3 pt-0 fw-bold" data-toggle-target></p>
    </div>
    <div class="d-flex" data-toggle-terminology="CLOSED:OPEN">
        <div class="form-check form-switch fs-3">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Windows</label>
        </div>
        <p class="ms-auto fs-3 pt-0 fw-bold" data-toggle-target></p>
    </div>
    <div class="d-flex" data-toggle-terminology="CLOSED:OPEN">
        <div class="form-check form-switch fs-3">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Sunroof</label>
        </div>
        <p class="ms-auto fs-3 pt-0 fw-bold" data-toggle-target></p>
    </div>
</div>