    <div class="bg-body-secondary p-3">
        <br/>
        <div class="d-flex">
            <h1 class="pt-3">
                {{ include('/vector/logo.svg') }}
                SparkPlug
            </h1>
            <h2 class="h1 text-body-secondary flex-grow-1 text-end" style="padding-top: 1.65rem;">Login</h2>
