<twig:vehicle-selector vehicle="2002 Ralsei Deltarune" heading="Vehicle Management"/>
<div class="p-4 pt-0">
    <div class="p-4 pt-0 d-block h-auto div-zebra">
        <a class="d-flex" data-pane-control="sub" data-bs-target="#driver_link">
            <span class="bi-person-fill-add pe-2 fs-3"></span>
            <p class="fs-3">Add/Remove Drivers</p>
            <span class="ms-auto bi-chevron-right pe-2 fs-3"></span>
        </a>
        <a class="d-flex">
            <span class="bi-pencil-square pe-2 fs-3"></span>
            <p class="fs-3">Set Nickname</p>
            <span class="ms-auto bi-chevron-right pe-2 fs-3"></span>
        </a>
        <a class="d-flex">
            <span class="bi-trash3-fill pe-2 fs-3"></span>
            <p class="fs-3">Delete Vehicle</p>
            <span class="ms-auto bi-chevron-right pe-2 fs-3"></span>
        </a>
    </div>
</div>