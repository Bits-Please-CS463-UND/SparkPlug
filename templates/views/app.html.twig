{% extends "/layouts/tabbed.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
{% block header %}
    <twig:periphery:header-mobile/>
{% endblock %}
{% block title %}
    car app :3
{% endblock %}
{% block sidebar %}
    <twig:panes:top-link    icon="bi-house-door-fill"  tab="home"          name="Home"             />
    <twig:panes:top-link    icon="bi-heart-pulse-fill" tab="diagnostics"   name="Diagnostics"      />
    <twig:panes:top-link    icon="bi-compass-fill"     tab="activity"      name="GPS and Activity" />

    {# Stupid hack: these are here but hidden so we can mimmic sub-tabs #}
    <twig:panes:sub-link    tab="actions"       />
    <twig:panes:sub-link    tab="metrics"       />
    <twig:panes:sub-link    tab="notifications" />
    <twig:panes:sub-link    tab="user"          />
    <twig:panes:sub-link    tab="vehicle"       />
    <twig:panes:sub-link    tab="driver"        />
    <twig:panes:sub-link    tab="profile"       />
    <twig:panes:sub-link    tab="register"      />
    <twig:panes:sub-link    tab="login"         />
    <twig:panes:sub-link    tab="onboarding"    />
    <twig:panes:sub-link    tab="add_vehicle"   />
{% endblock %}
{% block panels %}
    <twig:panes:panel id="login"            template="/panel/auth/login.html.twig"          heading="Login"                 selected/>
    <twig:panes:panel id="home"             template="/panel/app/home.html.twig"                                            skeleton/>
    <twig:panes:panel id="diagnostics"      template="/panel/app/logs.html.twig"            heading="Logs & Diagnostics"    skeleton/>
    <twig:panes:panel id="activity"         template="/panel/app/activity.html.twig"        heading="GPS & Activity"        skeleton/>
    <twig:panes:panel id="actions"          template="/panel/app/actions.html.twig"         heading="Actions"                       />
    <twig:panes:panel id="metrics"          template="/panel/app/metrics.html.twig"         heading="Metrics"                       />
    <twig:panes:panel id="notifications"    template="/panel/app/notifications.html.twig"   heading="Notifications"                 />
    <twig:panes:panel id="user"             template="/panel/app/user.html.twig"            heading="Preferences"                   />
    <twig:panes:panel id="vehicle"          template="/panel/app/vehicle.html.twig"         heading="Vehicle Preferences"   skeleton/>
    <twig:panes:panel id="driver"           template="/panel/app/driver.html.twig"          heading="Add/Remove Drivers"            />
    <twig:panes:panel id="profile"          template="/panel/app/profile.html.twig"         heading="Edit Profile"                  />
    <twig:panes:panel id="register"         template="/panel/auth/register.html.twig"       heading="Registration"                  />
    <twig:panes:panel id="onboarding"       template="/panel/auth/onboarding.html.twig"     heading="Onboarding"                    />
    <twig:panes:panel id="add_vehicle"      template="/panel/app/add_vehicle.html.twig"     heading="Add Vehicle"                   />
{% endblock %}